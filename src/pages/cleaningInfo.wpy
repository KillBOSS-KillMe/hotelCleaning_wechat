
<template>
  <view>
    <view class="cleaningInfo">
      <view class="imageBg">
        <image wx:if="{{cleaningInfo.image_url == ''}}" src="/img/daw.jpg" />
        <image wx:if="{{cleaningInfo.image_url != ''}}" src="{{cleaningInfo.image_url}}" />
      </view>
      <view class="name">{{cleaningInfo.name}}</view>
      <view class="info">已完成{{cleaningInfo.order_one_count}}单</view>
      <view class="lv">
        <repeat for="{{lv}}" item="item">
          <icon class="iconfont iconwuxing2 {{cleaningInfo.level >= index+1?'active':''}}"></icon>
        </repeat>
      </view>
    </view>
    <view class="list">
      <view class="item">
        <label>实名认证</label>
        <text wx:if="{{cleaningInfo.status == 0}}">未认证</text>
        <text wx:if="{{cleaningInfo.status == 1}}">已认证</text>
        <text wx:if="{{cleaningInfo.status == 2}}">用户未注册</text>
        <text wx:if="{{cleaningInfo.status == 3}}">审核中</text>
      </view>
      <view class="item">
        <label>联系电话</label>
        <text data-phone="{{cleaningInfo.phone}}" @tap="runCall">{{cleaningInfo.phone}}</text>
      </view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class CleaningInfo extends wepy.page {
    config = {
      navigationBarTitleText: '保洁推荐'
    }
    // components = {}

    mixins = []

    data = {
      requestImgUrl: '',
      cleaningInfo: {},
      lv: 5,
    }

    // computed = {}

    methods = {
      // 拨打电话
      runCall(e){
        let phone = e.currentTarget.dataset.phone
        this.$parent.runCall(phone)
      },
    }

    events = {
      
    }

    onLoad(options) {
      this.options = options
      // 获取保洁详情
      this.getWineInfo()
    }
    // 获取保洁详情
    getWineInfo() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index/get_clean_info`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id: this.options.id
        },
        method: 'GET',
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.cleaningInfo = data.data.data
            this.$apply()
          }
        }
      })
    }
  }
</script>
