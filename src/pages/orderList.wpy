          distance: 12.55,
          room: "12层、12层、12层、12层所有房间"
        },
      ],
      clean_status: 0, // 状态 0=全部，1=待处理，2=待确认，3=已完成
      wine_status: 0, // 状态 0=全部，1=待处理，2=待确认，3=已完成
    }

    // computed = {}

    methods = {
      // 底部导航跳转
      goPage (url, evt) {
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      // 进入订单详情
      goOrderInfo(e) {
        console.log(e)
        let id = e.currentTarget.dataset.id
        let url = `/pages/orderInfo?id=${id}`
        this.$navigate(url)
      },
      // 进入订单详情
      goOrderTransfer(e) {
        console.log(e)
        let id = e.currentTarget.dataset.id
        let url = `/pages/orderTransfer?id=${id}`
        this.$navigate(url)
      },
      // 进入订单评价
      goOrderEvaluation(e) {
        console.log(e)
        let id = e.currentTarget.dataset.id
        let url = `/pages/orderEvaluation?id=${id}`
        this.$navigate(url)
      },
      // 进入确认订单
      goOrderConfirm(e) {
        console.log(e)
        let id = e.currentTarget.dataset.id
        let url = `/pages/orderConfirm?id=${id}`
        this.$navigate(url)
      },
    }

    events = {
      
    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      console.log(this.userInfo)
      this.$apply()
    }
    onShow() {
      
      // userInfo.type: null   用户类型1-保洁   2-酒店
      this.getOrderList()
    }
    // 执行列表加载
    getOrderList() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let url = ''
      let data = {page: 1}
      if (this.userInfo.type == 2) {
        // 执行酒店加载
        url = 'get_clean_order_list'
        data['clean_status'] = this.wine_status
      } else if (this.userInfo.type == 1) {
        // 执行保洁加载
        url = 'get_wine_order_list'
        data['wine_status'] = this.clean_status
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/order/${url}`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: data,
        method: 'GET',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          console.log(data)
          if (data.data.code === 8888) {
            this.orderList = data.data.data.data
            this.current_page = data.data.data.current_page


            // "last_page": 1,     表示总页数
            // "per_page": 10,      表示每页条数
            // "current_page": 1,   表示当前页
            // "total": 1           表示总条数
            this.$apply()
          }
        }
      })
    }
  }
