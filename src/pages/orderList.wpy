    <view class="orderList" wx:if="{{userInfo.type == 2}}">
      <repeat for="{{orderList}}" item="item">
        <view class="item" data-id="{{item.id}}">
          <image src="{{item.image_url}}" />
          <view class="info">
            <view class="hotelTitle">
              <view class="name">{{item.hotel_name}}({{item.sum}}间)</view>
              <view class="label active" wx:if="{{item.wine_status == '1'}}">待处理</view>
              <view class="label active" wx:if="{{item.wine_status == '2'}}">待确认</view>
              <view class="label active" wx:if="{{item.wine_status == '3'}}">待评论</view>
              <view class="label" wx:if="{{item.wine_status == '4'}}">已完成</view>
            </view>
