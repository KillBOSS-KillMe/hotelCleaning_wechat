        <view wx:if="{{userInfo.type == 1}}">已完成</view>
        <view class="border"></view>
      </view>
      <view wx:if="{{userInfo.type == 2}}" class="item {{listStatus == '4'?'orderActive':''}}" data-status="4" @tap="selListStatus">
        <view>已完成</view>
        <view class="border"></view>
      </view>
    </view>
    <!-- 保洁订单列表 -->
    <view class="orderList" wx:if="{{userInfo.type == 1}}">
      <repeat for="{{orderList}}" item="item">
        <view class="item" data-id="{{item.id}}">
          <image src="{{item.image_url}}" />
          <view class="info">
            <view class="hotelTitle">
              <view class="name">{{item.hotel_name}}({{item.num}}间)</view>
              <view class="label active" wx:if="{{item.clean_status == '1'}}">待处理</view>
              <view class="label active" wx:if="{{item.clean_status == '2'}}">待确认</view>
              <view class="label active" wx:if="{{item.clean_status == '3' && userInfo.type == 1}}">已完成</view>
              <view class="label active" wx:if="{{item.clean_status == '3' && userInfo.type == 2}}">待评论</view>
              <view class="label" wx:if="{{item.clean_status == '4' && userInfo.type == 2}}">已完成</view>
            </view>
            <view class="hotelAddress" wx:if="{{userInfo.type == 2}}">
