<script>
  import wepy from 'wepy'
  import nav from '../components/nav' // 底部导航
  export default class OrderList extends wepy.page {
    config = {
      navigationBarTitleText: '订单'
    }
    components = {
      nav: nav
    }

    mixins = []

    data = {
      userInfo: {},
      requestImgUrl: '',
      orderList: [],
      listStatus: 0,
      clean_status: 0, // 状态 0=全部，1=待处理，2=待确认，3=已完成
      wine_status: 0, // 状态 0=全部，1=待处理，2=待确认，3=已完成
      current_page: 0,
      last_page: 1,
      longitude: 0,
      latitude: 0

    }

    // computed = {}

    methods = {
      // 底部导航跳转
      goPage (url, evt) {
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      // 列表状态切换--顶部导航
      selListStatus(e) {
        this.orderList = []
        this.listStatus = e.currentTarget.dataset.status
        this.current_page = 0
        this.$apply()
        this.getOrderList()
      },
      // 进入订单详情
      goOrderInfo(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/orderInfo?id=${id}`
        this.$navigate(url)
      },
      // 进入订单详情
      goOrderTransfer(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/orderTransfer?id=${id}`
        this.$navigate(url)
      },
      // 进入订单评价
      goOrderEvaluation(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/orderEvaluation?id=${id}`
        this.$navigate(url)
      },
      // 进入确认订单
      goOrderConfirm(e) {
        let id = e.currentTarget.dataset.id
        let url = ''
        if (this.userInfo.type == 2) {
          url = `/pages/orderInfoHotel?id=${id}`
        } else {
          url = `/pages/orderConfirm?id=${id}`
        }
        console.log(url)
        this.$navigate(url)
      },
    }

    events = {
      
    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.$apply()
    }
    onShow() {
      // userInfo.type: null   用户类型1-保洁   2-酒店
      // 清空列表
      this.orderList = []
      this.listStatus = 0
      this.current_page = 0
      this.$apply()
      wx.getLocation({
        type: 'wgs84',   //默认为 wgs84 返回 gps 坐标，gcj02 返回可用于 wx.openLocation 的坐标 
        desc: '你的位置信息将用于小程序位置接口的效果展示',
        success: res => { 
          this.longitude = res.longitude
          this.latitude = res.latitude
          this.$apply()
          // 执行列表加载
          this.getOrderList()
        },
        fail: res => {
          this.longitude = ''
          this.latitude = ''
          this.$apply()
          // 执行列表加载
          this.getOrderList()
        }
      })
    }
    // 执行列表加载
    getOrderList() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let url = ''
      let data = {
        page: this.current_page + 1,
        lat: this.longitude,
        lng: this.latitude
      }
      if (this.userInfo.type == 2) {
        // 执行酒店加载
        url = 'get_wine_order_list'
        data['wine_status'] = this.listStatus
      } else if (this.userInfo.type == 1) {
        // 执行保洁加载
        url = 'get_clean_order_list'
        data['clean_status'] = this.listStatus
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/order/${url}`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: data,
        method: 'GET',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.orderList = this.orderList.concat(data.data.data.data)
            // 当前页码
            this.current_page = data.data.data.current_page
            // 总页码
            this.last_page = data.data.data.last_page
            // "last_page": 1,     表示总页数
            // "per_page": 10,      表示每页条数
            // "current_page": 1,   表示当前页
            // "total": 1           表示总条数
            this.$apply()
          }
        }
      })
    }
  }
</script>
