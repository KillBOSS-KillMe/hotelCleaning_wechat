            </view>
            <view class="hotelInfo">
              <text>{{item.make_time}}</text>
              <view>
                <!-- <button class="transfer" wx:if="{{item.wine_status == '1'}}" data-id="{{item.id}}" @tap="goOrderTransfer">转单</button> -->
                <!-- <button wx:if="{{item.wine_status == '1'}}" data-id="{{item.id}}" @tap="goOrderInfo">接单</button> -->
                <button wx:if="{{item.wine_status == '2'}}" data-id="{{item.id}}" @tap="goOrderConfirm">确认订单</button>
                <button wx:if="{{item.wine_status == '3'}}" data-id="{{item.id}}" @tap="goOrderEvaluation">评价订单</button>
                <button class="carryOut" wx:if="{{item.wine_status == '4'}}">已完成</button>
              </view>
            </view>
          </view>
        </view>
      </repeat>
      <view class="listNull" wx:if="{{orderList.length == 0}}">暂无数据</view>
    </view>
    <view class="listMore" @tap="getOrderList" wx:if="{{current_page < last_page}}">
      <text>加载更多</text>
      <icon class="iconfont iconxiala"></icon>
    </view>
    <nav @childFn.user="goPage" @childFnOrReturn.user="goModifyUserInfo" />
  </view>
