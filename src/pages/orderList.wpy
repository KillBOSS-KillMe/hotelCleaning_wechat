              <view>
                <button class="transfer" wx:if="{{item.clean_status == '2'}}" data-id="{{item.id}}" @tap="goOrderTransfer">转单</button>
                <button wx:if="{{item.clean_status == '1'}}" data-id="{{item.id}}" @tap="goOrderInfo">抢单</button>
