<template>
  <view>
    <view class="hotelList">
      <repeat for="{{hotelList}}" item="item">
        <view class="item" data-id="{{item.id}}" @tap="gohotelInfo">
          <image src="{{item.image_url}}" />
          <view class="info">
            <view class="hotelTitle">
              <view class="name">{{item.hotel_name}}</view>
              <view class="label">{{item.type}}</view>
            </view>
            <view class="hotelAddress">
              <icon class="iconfont icondingwei"></icon>
              {{item.detailed_address}}
            </view>
            <view class="hotelInfo">
              <text>距您约{{item.wine_order_one_count}}km</text>
              <text>完成{{item.wine_order_one_count}}单</text>
            </view>
          </view>
        </view>
      </repeat>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class HoteList extends wepy.page {
    config = {
      navigationBarTitleText: '酒店推荐'
    }
    // components = {}

    mixins = []

    data = {
      requestImgUrl: '',
      hotelList: [],
      last_page: 1
    }

    // computed = {}

    methods = {
      gohotelInfo(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/hotelInfo?id=${id}`
        this.$navigate(url)
      }
    }

    events = {
      
    }

    onLoad() {
      // 获取楼盘列表
      this.getWineList()
    }
    // 获取楼盘列表
    getWineList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index/get_wine_list_info`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          page: this.last_page
        },
        method: 'GET',
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.hotelList = data.data.data.data
            this.$parent.globalData.hotelListIndex = this.hotelList
            // 下一页
            this.last_page = data.data.last_page
            this.total = data.data.total
            this.$apply()
          }
        }
      })
    }
  }
</script>
