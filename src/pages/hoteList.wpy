<template>
  <view>
    <view class="hotelList">
      <repeat for="{{hotelList}}" item="item">
        <view class="item" data-id="{{item.id}}" @tap="gohotelInfo">
          <image src="{{item.img}}" />
          <view class="info">
            <view class="hotelTitle">
              <view class="name">{{item.name}}</view>
              <!-- <view class="label">{{item.type}}</view> -->
            </view>
            <view class="hotelAddress">
              <icon class="iconfont icondingwei"></icon>
              {{item.detailed_address}}
            </view>
            <view class="hotelInfo">
              <text wx:if="{{item.distance != ''}}">距您约{{item.distance}}</text>
              <text wx:if="{{item.distance == ''}}">      </text>
              <text>完成{{item.wine_order_one_count}}单</text>
            </view>
          </view>
        </view>
      </repeat>
    </view>
    <view class="listMore" @tap="getWineList" wx:if="{{current_page < last_page}}">
      <text>加载更多</text>
      <icon class="iconfont iconxiala"></icon>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class HoteList extends wepy.page {
    config = {
      navigationBarTitleText: '酒店推荐'
    }
    // components = {}

    mixins = []

    data = {
      requestImgUrl: '',
      hotelList: [],
      current_page: 0,
      last_page: 0,
      longitude: 0,
      latitude: 0
    }

    // computed = {}

    methods = {
      gohotelInfo(e) {
        let id = e.currentTarget.dataset.id
        let url = `/pages/hotelInfo?id=${id}`
        this.$navigate(url)
      }
    }

    events = {
      
    }

    onLoad() {
      // // 定位
      this.getLocation()
      // 酒店列表
      // this.getWineList()
    }
    // 定位
    getLocation() {
      wx.getLocation({
        type: 'wgs84',   //默认为 wgs84 返回 gps 坐标，gcj02 返回可用于 wx.openLocation 的坐标 
        desc: '你的位置信息将用于小程序位置接口的效果展示',
        success: res => { 
          this.longitude = res.longitude
          this.latitude = res.latitude
          this.$apply()
          // 酒店列表
          this.getWineList()
        },
        fail: res => {
          this.longitude = ''
          this.latitude = ''
          this.$apply()
          // 酒店列表
          this.getWineList()
        }
      })
    }
    // 酒店列表
    getWineList() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/hotel/hotel_list`,
        method: 'GET',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 1) {
            this.hotelList = this.hotelList.concat(data.data.data)
            // 当前页码
            // this.current_page = data.data.data.current_page
            // // 总页码
            // this.last_page = data.data.data.last_page
            // "last_page": 1,     表示总页数
            // "per_page": 10,      表示每页条数
            // "current_page": 1,   表示当前页
            // "total": 1           表示总条数
            this.$apply()
          }
        }
      })
    }
  }
</script>
