
<template>
  <view>
    <view class="address" @tap="goCitySel">
      <image src="/img/address.png" />
      <view>当前位置当前位当前位置当前位当前位置当前位当前位置当前位</view>
    </view>
    <swiper wx:if="{{swiperList.length > 0}}" class='swiper' indicator-dots="true" autoplay='true' interval='5000' duration='2000'>
      <repeat for="{{swiperList}}" item="item">
        <swiper-item data-id="{{ item.id }}">
          <image src="{{ item.image_url }}" bindtap='shareQRCodeImg' data-imgurl="{{requestImgUrl + item.img}}" />
        </swiper-item>
      </repeat>
    </swiper>
    <view class="title" wx:if="{{hotelList.length > 0}}">
      <label>酒店推荐</label>
      <view @tap="gohotelList">
        更多<icon class="iconfont iconxiayibu"></icon>
      </view>
    </view>
    <view class="hotelList" wx:if="{{hotelList.length > 0}}">
      <repeat for="{{hotelList}}" item="item">
        <view class="item" data-id="{{item.id}}" @tap="gohotelInfo">
          <image src="{{item.image_url}}" />
          <view class="info">
            <view class="hotelTitle">
              <view class="name">{{item.hotel_name}}</view>
              <view class="label">{{item.type}}</view>
            </view>
            <view class="hotelAddress">
              <icon class="iconfont icondingwei"></icon>
              {{item.detailed_address}}
            </view>
            <view class="hotelInfo">
              <text>距您约{{item.wine_order_one_count}}km</text>
              <text>完成{{item.wine_order_one_count}}单</text>
            </view>
          </view>
        </view>
      </repeat>
    </view>
    <!-- <view class="title" wx:if="{{cleaningList.length > 0}}"> -->
    <view class="title">
      <label>保洁推荐</label>
      <view @tap="goCleaningList">
        更多<icon class="iconfont iconxiayibu"></icon>
      </view>
    </view>
    <scroll-view scroll-x="true" class="recommendCleaning" wx:if="{{cleaningList.length > 0}}">
      <repeat for="{{cleaningList}}" item="item">
        <view class="item" data-id="{{item.id}}" @tap="goCleaningInfo">
          <image src="{{item.image_url}}" />
          <view class="name">{{item.name}}</view>
          <view class="info">已完成{{item.order_one_count}}单</view>
        </view>
      </repeat>
    </scroll-view>
    <nav @childFn.user="goPage" @childFnOrReturn.user="goModifyUserInfo" />
    <button open-type="getUserInfo" id='getUserInfo' wx:if="{{userInfoButtonShow}}" lang="zh_CN" @getuserinfo="onGetUserInfo"></button>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import nav from '../components/nav' // 底部导航
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '酒店保洁'
    }
    components = {
      nav: nav
    }

    mixins = []

    data = {
      userInfoButtonShow: true,
      requestImgUrl: '',
      token: '',
      swiperList: [],
      cleaningList: [],
      hotelList: []
    }

    // computed = {}

    methods = {
      // 底部导航跳转
      goPage (url, evt) {
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      goCitySel(e) {
        let url = `/pages/citySel`
        this.$navigate(url)
      },
      gohotelList(e) {
        let url = `/pages/hoteList`
        this.$navigate(url)
      },
      gohotelInfo(e) {
        console.log(e)
        let id = e.currentTarget.dataset.id
        let url = `/pages/hotelInfo?id=${id}`
        this.$navigate(url)
      },
      // 进入保洁员详情
      goCleaningInfo(e) {
        console.log(e)
        let id = e.currentTarget.dataset.id
        let url = `/pages/cleaningInfo?id=${id}`
        this.$navigate(url)
      },
      // 进入保洁员列表
      goCleaningList(e) {
        let url = `/pages/cleaningList`
        this.$navigate(url)
      }
    }

    events = {
      
    }

    async onLoad(options) {
      
      // this.code = await this.$parent.getCode()
      // console.log(this.code)
      // 加载token
      // this.token = await this.$parent.getToken()
      // console.log(this.token)
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      // 获取用户信息
      await this.onGetUserInfo()
    }
    
    
    // 用户信息获取
    onGetUserInfo() {
      // 查看是否授权
      wx.getSetting({
        success: res => {
          if (res.authSetting['scope.userInfo']) {
            this.userInfoButtonShow = false
            this.$apply()
            // 已经授权，可以直接调用 getUserInfo 获取头像昵称
            wx.getUserInfo({
              success: res => {
                this.userInfo = res.userInfo
                console.log(this.userInfo)
                this.$parent.globalData.userInfo = res.userInfo
                this.$apply()
                if (this.userInfo) {
                  // 提交用户信息
                  this.getToken()
                }
                this.$apply()
              }
            })
          } else {
            // this.clickWeekBangs()
          }
        }
      })
    }
    // 获取token
    getToken() {
      wepy.login({
        success: res => {
          if (res.code) {
            this.code = res.code
            wx.request({
              url: `${this.$parent.globalData.requestUrl}/auth/get_token`,
              method: 'POST',
              header: {
                apikey: this.$parent.globalData.apikey
              },
              data: {
                code: res.code
              },
              success: data => {
                wx.hideToast()
                data = this.$parent.null2str(data)
                console.log(data)
                let token = `${data.data.token_type} ${data.data.token}`
                this.$parent.globalData.token = token
                // 用户信息获取
                this.setUserInfo()
                // 轮播图加载
                this.getSwiperList()
                // 酒店列表
                this.getWineList()
                // 保洁列表
                this.getCleanList()
              }
            })
            
          } else {
            console.log('登录失败！' + res.errMsg)
          }
        }
      })
    }
    // 提交用户信息
    setUserInfo() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/auth/my`,
        method: 'GET',
        header: {
          'content-type':'application/json',
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.userInfo = Object.assign(this.userInfo, data.data.data);
            this.$parent.globalData.userInfo = this.userInfo
            console.log(this.userInfo)
            this.$apply()
            // 判断是否进入注册页
            if (this.userInfo.status == 2) {
              // 提示注册
              this.goRegistered()
            }
            // status: 2    户状态：0=未认证，1=已认证，2=用户未注册，3=审核中
            // type: null   用户类型1-保洁   2-酒店
            // admin_id: 0        上级用户ID
            // amount: "0.00"     余额
          } else {
            wx.showModal({
              title: '',
              content: data.data.errmsg
            })
          }
        }
      })
    }
    // 获取保洁
    getCleanList() {
      this.cleaningList = this.$parent.globalData.cleaningListIndex
      if (this.cleaningList.length > 0) {
        this.$apply()
        return false
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index/get_clean_list`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        method: 'GET',
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.cleaningList = data.data.data
            this.$parent.globalData.cleaningListIndex = this.cleaningList
            this.$apply()
          }
        }
      })
    }
    // 获取楼盘列表
    getWineList() {
      this.hotelList = this.$parent.globalData.hotelListIndex
      if (this.hotelList.length > 0) {
        this.$apply()
        return false
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index/get_wine_list`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        method: 'GET',
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.hotelList = data.data.data
            this.$parent.globalData.hotelListIndex = this.hotelList
            this.$apply()
          }
        }
      })
    }
    // 获取轮播图
    getSwiperList() {
      this.swiperList = this.$parent.globalData.swiperList
      if (this.swiperList.length > 0) {
        this.$apply()
        return false
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index/get_baner_list`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        method: 'GET',
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.swiperList = data.data.data
            this.$parent.globalData.swiperList = this.swiperList
            this.$apply()
          }
        }
      })
    }
    // 提示注册
    goRegistered() {
      wx.showModal({
        title: '',
        content: '尚未注册，是否注册',
        success: sm => {
          if (sm.confirm) {
            this.$redirect('/pages/selRegisteredType')
          } else if (sm.cancel) {
            // 用户点击取消
          }
        }
      })
    }
    // 定位
    getLocation() {
      wx.getLocation({
        type: 'wgs84',   //默认为 wgs84 返回 gps 坐标，gcj02 返回可用于 wx.openLocation 的坐标 
        desc: '你的位置信息将用于小程序位置接口的效果展示',
        success: res => { 
          var longitude = res.longitude
          var latitude = res.latitude
          this.loadCity(longitude, latitude)
        }
      })
    }
    loadCity(longitude, latitude) {
      wx.request({
        url: 'https://api.map.baidu.com/geocoder/v2/?ak=FMn3zXubg5BmfZZSsFVP28XjMqdPxmee&location=' + latitude + ',' + longitude + '&output=json',
        data: {},
        header: {
          'Content-Type': 'application/json'
        },
        success: res=> {
          var city = res.data.result.addressComponent.city;
          this.getCityId(city)
        }
      })
    }
    // 获取位置信息
    getCityId(cityName) {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/city`,
        method: 'GET',
        success: data => {
          if (data.data.code == 1) {
            var cityList = this.$parent.null2str(data.data.data)
            var i = 0
            for (i in cityList) {
              if (cityName == cityList[i].name) {
                this.cityNode = {'name': cityList[i].name, 'id': cityList[i].id}
                this.$parent.globalData.cityNode = this.cityNode
                this.$parent.globalData.originalCityNode = this.cityNode
                this.$apply()
                this.$parent.setStorageCityNode(this.cityNode)
                // 获取楼盘列表
                this.getLocalList()
                // return cityNode
                break
              }
            }
          }
        }
      })
    }
    
  }
</script>
