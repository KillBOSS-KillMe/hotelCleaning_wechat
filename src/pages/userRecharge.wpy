<template>
  <view>
    <view class="title">
      账户余额：<text>￥{{userInfo.wallet}}</text>
    </view>
    <view class="title">
      可提现金额：
      <text wx:if="{{userInfo.amount > 500}}">￥{{userInfo.amount - 500}}</text>
      <text wx:if="{{userInfo.amount <= 500}}">￥0</text>
    </view>
    <view class="list">
      <repeat for="{{selRechargeList}}" item="item">
        <view @tap="selMoney" data-index="{{index}}" class="{{index == serNode?'active':''}}">{{item.money/100}}元</view>
      </repeat>
    </view>
    <view class="sub" wx:if="{{userInfo.type == 2}}">
      <view @tap="recharge">充值</view>
    </view>
    <view class="sub" wx:if="{{userInfo.type == 1}}">
      <view @tap="withdraw">提现</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class UserRecharge extends wepy.page {
    config = {
      navigationBarTitleText: '充值'
    }
    components = {}

    mixins = []

    data = {
      id: '',
      money: '',
      userInfo: {},
      serNode: 0,
      // selRechargeList: []
      selRechargeList: [
        {id: '1', money: 1},
        {id: '1', money: 1000},
        {id: '1', money: 5000},
        {id: '1', money: 10000},
        {id: '1', money: 50000},
        {id: '1', money: 100000},
      ]
    }

    computed = {}

    methods = {
      selMoney(e) {
        let index = e.currentTarget.dataset.index
        this.serNode = index
        this.money = this.selRechargeList[index].money
        this.$apply()
      }

    }

    events = {
      
    }

    onLoad() {
      this.money = this.selRechargeList[0].money
      this.userInfo = this.$parent.globalData.userInfo
      this.$apply()
      let name = ''
      if (this.userInfo.type == 2) {
        name = '充值'
      } else {
        name = '提现'
      }
      wx.setNavigationBarTitle({
        title: name
      })
    }
    // 提现
    withdraw() {
      let moneyNode = this.selRechargeList[this.serNode]
      if (this.userInfo.type == 1 && parseFloat(this.userInfo.amount - 500) < parseFloat(moneyNode.money)) {
        wx.showToast({
          title: "平台储蓄金需要大于500，如需提现请联系人工客服",
          icon: 'none'
        });
        return false
      } else if (parseFloat(this.userInfo.amount - 500) < parseFloat(moneyNode.money)) {
        wx.showToast({
          title: "余额不足",
          icon: 'none'
        });
        return false
      }
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/withdraw/set_withdraw`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id: this.id
        },
        method: 'POST',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            wx.showToast({
              title: "提现成功",
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                data: -1
              })
            }, 2000)
            this.$apply()
          } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
        }
      })
    }
    // 充值
    recharge() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/basis/wx_pay`,
        data: {
          openid: this.userInfo.openid,
          money: this.money
        },
        method: 'POST',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 1) {
            this.runRecharge(data.data.data)
          } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
        }
      })
    }
    runRecharge(payNode) {
      wx.showToast({
        title: "充值加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.requestPayment({
        'timeStamp': payNode.timestamp,
        'nonceStr': payNode.nonceStr,
        'package': payNode.package,
        'signType': payNode.signType,
        'paySign': payNode.paySign,
        'success': data => {
          wx.hideToast()
          wx.showToast({
            title: "充值成功",
            icon: 'success',
            duration: 2000
          });
          // 两秒后返回上一页
          setTimeout(e => {
            wx.navigateBack({
              data: -1
            })
          }, 2000)
        },
        'fail': data => {
          wx.hideToast()
          wx.showToast({
            title: "充值失败",
            icon: 'none',
            duration: 2000
          });
        }
      })
    }
  }
</script>
