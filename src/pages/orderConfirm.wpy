<script>
  import wepy from 'wepy'
  export default class OrderConfirm extends wepy.page {
    config = {
      navigationBarTitleText: '评价订单'
    }
    // components = {}

    mixins = []

    data = {
      requestImgUrl: '',
      cleaningInfo: {img: '/img/daw.jpg', name: '二狗子', num: 10, id: '1'},
      orderInfo: {
          id: '1', 
          name: '酒店名称酒店', 
          num: 2,
          time: '2019-9-21 14:07',
          str: '1',  // 1-待处理，2-待确认，3-已完成, 4-待评价
          img: '/img/daw.jpg', 
          address: '地址地址地址地址地址地址地址地址地址地址', 
          distance: 12.55,
          room: "12层、12层、12层、12层所有房间"
        }
      
    }

    // computed = {}

    methods = {

    }

    events = {
      
    }

    onLoad(options) {
      this.options = options
      this.userInfo = this.$parent.globalData.userInfo
    }
    sub() {
      wx.showToast({
        title: "订单确认中...",
        icon: 'loading',
        duration: 1000000
      });
      let url = ''
      if (this.userInfo.type == 2) {
        // 执行酒店
        // url = 'set_wine_order_affirm'
        url = 'set_clean_order_affirm'
      } else if (this.userInfo.type == 1) {
        // 执行保洁
        // url = 'set_clean_order_affirm'
        url = 'set_wine_order_affirm'
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/order/${url}`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id: this.options.id
        },
        method: 'PUT',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          console.log(data)
          if (data.data.code === 8888) {
            wx.showToast({
              title: "订单确认成功",
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                data: -1
              })
            }, 2000)
            
          }
        }
      })
    }
  }
</script>
