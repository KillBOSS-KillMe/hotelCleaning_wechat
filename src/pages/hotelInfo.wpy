          </view>
          <text wx:if="{{hotelInfo.distance != ''}}">距离您约{{hotelInfo.distance}}</text>
        </view>
        <view class="item">
          <image src="/img/phone.png" />
          <text data-phone="{{hotelInfo.desk_tel}}" @tap="runCall">{{hotelInfo.desk_tel}}</text>
        </view>
      </view>
    </view>
    <view class="list">
      <view class="item">
