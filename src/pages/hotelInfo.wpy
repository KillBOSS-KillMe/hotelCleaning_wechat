        <swiper-item>
          <image src="{{ item.url }}" bindtap='shareQRCodeImg' data-imgurl="{{item.url}}" />
        </swiper-item>
      </repeat>
    </swiper>
    <view class="hotelInfo">
      <image class="logo" src="{{hotelInfo.image_url}}" />
      <view class="info">
