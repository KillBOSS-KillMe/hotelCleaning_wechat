        <label data-phone="{{hotelInfo.desk_tel}}" @tap="runCall">{{hotelInfo.desk_tel}}</label>
      </view>
      <view class="item">
        <text>酒店资质</text>
        <label wx:if="{{hotelInfo.status == 0}}">未认证</label>
        <label wx:if="{{hotelInfo.status == 1}}">已认证</label>
        <label wx:if="{{hotelInfo.status == 3}}">审核中</label>
      </view>
    </view>
