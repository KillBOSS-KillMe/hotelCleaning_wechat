</template>

<script>
  import wepy from 'wepy'
  export default class HotelInfo extends wepy.page {
    config = {
      navigationBarTitleText: '酒店详情'
    }
    // components = {}

    mixins = []

    data = {
      requestImgUrl: '',
      swiperList: [],
      hotelInfo: {}
    }
    // computed = {}

    methods = {
      // 拨打电话
      runCall(e){
        let phone = e.currentTarget.dataset.phone
        this.$parent.runCall(phone)
      },
    }

    events = {
      
    }

    onLoad(options) {
      this.options = options
      // 获取楼盘详情
      this.getWineInfo()
    }
    // 获取楼盘详情
    getWineInfo() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index/get_wine_info`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id: this.options.id
        },
        method: 'GET',
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.hotelInfo = data.data.data

            this.$apply()
          }
        }
      })
    }
  }
</script>
