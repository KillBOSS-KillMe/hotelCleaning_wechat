<template>
  <view>
    <view class="allMoney">
      <view class="money">￥{{list.length}}</view>
      <view>总房间数</view>
      <view class="button" @tap="newRoom">新建房间</view>
    </view>
    <view class="title">房间列表</view>
    <view class="list">
      <!-- list -->
      <repeat for="{{list}}" item="item">
        <view class="item" data-id="{{item.id}}">
          <view>
            <view class="name">{{item.room_num}}号房</view>
            <view class="money">
              <text>￥{{item.room_money}}</text>
            </view>
          </view>
          <view>
            <view>{{item.room_floor}}层</view>
            <view>{{item.room_type}}</view>
          </view>
        </view>
      </repeat>
    </view>
    <view class="listMore" @tap="getList" wx:if="{{current_page < last_page}}">
      <text>加载更多</text>
      <icon class="iconfont iconxiala"></icon>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class UserRoomList extends wepy.page {
    config = {
      navigationBarTitleText: '我的钱包'
    }
    components = {}

    mixins = []

    data = {
      userInfo: {},
      list: [],
      current_page: 0,
      last_page: 0
    }

    computed = {}

    methods = {
      newRoom(e) {
        // 进入充值页
        let url = `/pages/roomEntry`
        this.$navigate(url)
      }
    }

    events = {
      
    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.$apply()
    }
    onShow() {
      this.getRoomList()
    }
    // 执行列表加载
    getRoomList() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/hotel/hotel_room_list`,
        data: {
          hid: this.userInfo.id
        },
        method: 'POST',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 1) {
            this.list = data.data.data
            console.log(this.list)
            // 当前页码
            // this.current_page = data.data.data.current_page
            // // 总页码
            // this.last_page = data.data.data.last_page
            this.$apply()
          }
        }
      })
    }
  }
</script>
