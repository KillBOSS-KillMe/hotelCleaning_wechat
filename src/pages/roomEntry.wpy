<style lang="less">
.item{
  width: 690rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  input{
    width: 508rpx;
    height: 80rpx;
    padding: 0 30rpx;
    // border: 1rpx solid #ddd;
    font-size: 26rpx;
    color: #666;
    border-radius: 10rpx;
  }
  label{
    width: 152rpx;
    height: 80rpx;
    font-size: 32rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }
}
</style>
<template>
  <view>
    <view class="item">
      <label>楼层</label>
      <input type="text" data-name="floor" @input="getSetData" placeholder="请输入楼层" />
    </view>
    <view class="item">
      <label>房间号</label>
      <input type="text" data-name="room_num" @input="getSetData" placeholder="请输入房间号" />
    </view>
    <view class="item">
      <label>房间类型</label>
      <picker bindchange="setType" value="{{index}}" range="{{showType}}">
        <input type="text" data-name="room_type_id" value="{{showType[index]}}" disabled placeholder="请选择房间类型" />
      </picker>
    </view>
    <view class="sub">
      <view @tap="sub">提交</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import check from '../mixins/check'
  export default class RoomEntry extends wepy.page {
    config = {
      navigationBarTitleText: '房间录入'
    }
    components = {}

    mixins = [check]

    data = {
      formNode: {
        room_floor: '',
        room_num: '',
        roomType: '',
        room_type_id: ''
      },
      showType: [],
      typeList: [
        {id: 2, name: "商务型"},
        {id: 1, name: "经济型"}
      ],
      index: '',
      roomList: []
    }

    computed = {}

    methods = {
      getSetData(e) {
        let formNode = this.formNode
        let name = e.currentTarget.dataset.name
        let value = e.detail.value
        formNode[name] = value
        this.formNode = formNode
        this.$apply()
      },
      setType(e) {
        let index = e.detail.value
        this.index = e.detail.value
        this.formNode['room_type_id'] = this.typeList[index].id
        this.formNode['roomType'] = this.typeList[index].name
        this.$apply()
      },
      sub() {
        let formNode = this.formNode
        if (formNode.floor == '') {
          wepy.showModal({
            title: '',
            content: '请输入楼层',
            showCancel: false
          })
          return
        }
        if (formNode.room_num == '') {
          wepy.showModal({
            title: '',
            content: '请输入房间号',
            showCancel: false
          })
          return
        }
        if (formNode.roomType == '') {
          wepy.showModal({
            title: '',
            content: '请选择房间类型',
            showCancel: false
          })
          return
        }
        // console.log(formNode)
        // return false
        // 新建房间
        this.newRoomSub()
        
      },
    }

    events = {
      
    }

    onLoad() {
      
      this.userInfo = this.$parent.globalData.userInfo
      let typeList = this.$parent.globalData.roomTypeList
      if (this.userInfo.hasOwnProperty('id')) {
        this.formNode['hid'] = this.userInfo.id
      }
      if (typeList.length > 0) {
        let showType = []
        for (let i = 0; i < typeList.length; i++) {
          showType.push(typeList[i].type_name)
        }
        this.typeList = typeList
        this.showType = showType
        this.$apply()
        return false
      } else {
        // 获取房间类型
        this.getRoomType()
      }
      this.$apply()
    }

    // 获取房间类型
    getRoomType() {
      wx.showToast({
        title: "加载房间类型...",
        icon: 'loading',
        duration: 10000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/basis/hotel_type`,
        method: 'GET',
        data: {},
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 1) {
            let typeList = data.data.data
            let showType = []
            for (let i = 0; i < typeList.length; i++) {
              showType.push(typeList[i].type_name)
            }
            this.typeList = typeList
            this.$parent.globalData.roomTypeList = typeList
            this.showType = showType
            this.$apply()
          } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
        }
      })
    }
    // 新建房间
    newRoomSub() {
      wx.showToast({
        title: "加载房间类型...",
        icon: 'loading',
        duration: 10000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/hotel/hotel_room`,
        method: 'POST',
        data: {
          room_floor: this.formNode.floor,
          room_num: this.formNode.room_num,
          room_type_id: this.formNode.room_type_id,
          hotel_id: this.userInfo.id
        },
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 1) {
            wx.showToast({
              title: "创建成功",
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                  data: -1
              })
            }, 2000)
          } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
        }
      })
    }
  }
</script>
