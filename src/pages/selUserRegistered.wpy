<template>
  <view>
    <!-- <view class="item">
      <label>身份证</label>
      <input type="text" data-name="IDCard" @input="getSetData" placeholder="请输入身份证号码" />
    </view> -->
    <view class="item">
      <label>姓名</label>
      <input type="text" data-name="name" @input="getSetData" placeholder="请输入真实姓名" />
    </view>
    <view class="item">
      <label>电话</label>
      <input type="text" data-name="phone" @input="getSetData" placeholder="请输入联系电话" />
    </view>
    <view class="item code">
      <label>验证码</label>
      <input type="text" data-name="code" @input="getSetData" placeholder="请输入验证码" />
      <view class="getCode" @tap="getCode">{{time}}</view>
    </view>
    <view class="sub">
      <view @tap="sub">提交</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  import check from '../mixins/check'
  export default class SelUserRegistered extends wepy.page {
    config = {
      navigationBarTitleText: '注册'
    }
    components = {}

    mixins = [check]

    data = {
      formNode: {
        IDCard: '',
        name: '',
        phone: '',
        code: '',
        fid: ''
      },
      disabled: false,
      currentTime: 60,   // 倒计时初始值
      time: '发送验证码'
    }

    computed = {}

    methods = {
      getSetData(e) {
        let formNode = this.formNode
        let name = e.currentTarget.dataset.name
        let value = e.detail.value
        formNode[name] = value
        this.formNode = formNode
        this.$apply()
      },
      sub() {
        let formNode = this.formNode
        // if (this.check.isIdentity_18(formNode.IDCard)) {
        //   wepy.showModal({
        //     title: '',
        //     content: '请输入身份证号码',
        //     showCancel: false
        //   })
        //   return
        // }
        // if (this.check.isNull(formNode.name)) {
        //   wepy.showModal({
        //     title: '',
        //     content: '请输入名称',
        //     showCancel: false
        //   })
        //   return
        // }
        // if (this.check.isPhone(formNode.phone)) {
        //   wepy.showModal({
        //     title: '',
        //     content: '请输入电话',
        //     showCancel: false
        //   })
        //   return
        // }
        // if (this.check.isNull(formNode.code)) {
        //   wepy.showModal({
        //     title: '',
        //     content: '请输入验证码',
        //     showCancel: false
        //   })
        //   return
        // }
        // if (formNode.IDCard == '') {
        //   wepy.showModal({
        //     title: '',
        //     content: '请输入身份证号码',
        //     showCancel: false
        //   })
        //   return
        // }
        if (formNode.name == '') {
          wepy.showModal({
            title: '',
            content: '请输入名称',
            showCancel: false
          })
          return
        }
        if (formNode.phone.length != 11) {
          wepy.showModal({
            title: '',
            content: '请输入电话',
            showCancel: false
          })
          return
        }
        if (formNode.code == 1) {
          wepy.showModal({
            title: '',
            content: '请输入验证码',
            showCancel: false
          })
          return
        }
        wx.showToast({
          title: "注册中...",
          icon: 'loading',
          duration: 10000
        });
        let timestamp = new Date().getTime()
        console.log(timestamp)
        
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/health/login`,
          method: 'POST',
          // header: {
          //   'content-type':'application/json',
          //   authorization: this.$parent.globalData.token,
          //   apikey: this.$parent.globalData.apikey
          // },
          data: {
            // number: formNode.IDCard,
            username: formNode.name,
            mobile: formNode.phone,
            code: formNode.code,
            fid: formNode.fid
          },
          success: data => {
            wx.hideToast()
            data = this.$parent.null2str(data)
            if (data.data.code === 1) {
              wx.showToast({
                title: "注册成功",
                icon: 'success',
                duration: 2000
              });
              this.$parent.globalData.token = data.data.token
              setTimeout(() => {
                wx.reLaunch({
                  url: `/pages/index`
                })
              }, 2000)
            } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
          }
        })
      },
      // 获取验证码
      getCode() {
        if (this.disabled) {
          return false
        }
        if (this.check.isPhone(this.formNode.phone)) {
          wepy.showModal({
            title: '',
            content: '请输入电话',
            showCancel: false
          })
          return
        }
        wx.showToast({
          title: "请求发送中...",
          icon: 'loading',
          duration: 10000
        });
        this.disabled = true
        this.$apply()
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/health/sms_code`,
          method: 'POST',
          // header: {
          //   'content-type':'application/json',
          //   authorization: this.$parent.globalData.token,
          //   apikey: this.$parent.globalData.apikey
          // },
          data: {
            mobile: this.formNode.phone
          },
          success: data => {
            wx.hideToast()
            data = this.$parent.null2str(data)
            console.log(data)
            if (data.data.code === 1) {
              wx.showToast({
                title: data.data.msg,
                icon: 'success',
                duration: 1000
              });
              this.$apply()
              this.countdown()
            } else {
              wx.showToast({
                title: data.data.msg,
                icon: 'none'
              });
            }
          }
        })
      }
    }

    events = {
      
    }
    onLoad() {
      this.formNode['fid'] = this.$parent.globalData.fid
      this.$apply()
      this.userInfo = this.$parent.globalData.userInfo
      if (this.userInfo.type != '0') {
        // 提示注册
        // this.goRegistered()
      }
    }
    // 提示注册
    goRegistered() {
      wx.showToast({
        title: "检测到用户已注册，进入首页",
        icon: 'none',
        duration: 2000
      });
      setTimeout(() => {
        this.$redirect('/pages/index')
      }, 2000)
    }
    // 倒计时
    countdown() {
      var currentTime = this.currentTime;
      this.time = `倒计时${currentTime}秒`
      this.$apply()
      var interval = setInterval(() => {
        this.time = '倒计时' + (currentTime - 1) + '秒'
        this.$apply()
        currentTime--
        if (currentTime <= 0) {
          clearInterval(interval)
          this.time = '重新获取'
          this.currentTime = 60
          this.disabled = false
          this.$apply()
        }
      }, 1000)
    }
  }
</script>
