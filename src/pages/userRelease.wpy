<template>
  <view>
    <view>
      <view class="item">
        <label>预约信息</label>
        <!-- <input type="text" data-name="IDCard" @input="getSetData" placeholder="请输入原电话" /> -->
      </view>
      <view class="item">
        <label>房间号</label>
        <checkbox-group bindchange="selCleaning" data-index="{{index}}" data-checks="{{item.checks}}">
          <view class="roomList">
            <repeat for="{{roomList}}" item="item">
              <view class="itemRoom">
                <checkbox data-index="{{index}}" id="{{item.id}}" value="{{index}}" checked="{{item.checks}}"/>
                <text>{{item.room_number}}</text>
              </view>
            </repeat>
          </view>
        </checkbox-group>
      </view>
      <view class="item code">
        <label>预约时间</label>
        <picker mode="multiSelector" bindchange="bindMultiPickerChange" value="{{formNode.make_time}}" range="{{multiArray}}">
          <input type="text" disabled data-name="code" value="{{formNode.make_time}}" placeholder="请选择日期" />
        </picker>
        <!-- <view class="getCode" @tap="getCode">发送验证码</view> -->
      </view>
      <view class="sub">
        <view @tap="sub">提交</view>
      </view>
    </view>
  </view>
</template>

<script>

const date = new Date()
const years = []
const months = []
const days = []
const hours = []
const minutes = []
// 获取年
for (let i = date.getFullYear(); i <= date.getFullYear() + 1; i++) {
  years.push('' + i)
}
// 获取月份
for (let i = 1; i <= 12; i++) {
  if (i < 10) {
    i = '0' + i
  }
  months.push('' + i)
}
// 获取日期
for (let i = 1; i <= 31; i++) {
  if (i < 10) {
    i = '0' + i
  }
  days.push('' + i)
}
// 获取小时
for (let i = 0; i < 24; i++) {
  if (i < 10) {
    i = '0' + i
  }
  hours.push('' + i)
}
// 获取分钟
for (let i = 0; i < 60; i++) {
  if (i < 10) {
    i = '0' + i
  }
  minutes.push('' + i)
}
  import wepy from 'wepy'
  export default class UserRelease extends wepy.page {
    config = {
      navigationBarTitleText: '发单列表'
    }
    components = {}

    mixins = []

    data = {
      multiIndex: [0, 9, 16, 10, 17],
      multiArray: [years, months, days, hours, minutes],
      requestImgUrl: '',
      // 房间列表
      roomList: [],
      formNode: {
        content: '',         // 房间列表
        make_time: ''        // 预约时间
      }
    }

    computed = {}

    methods = {
      selCleaning(e) {
        let indexArr = e.detail.value
        let roomList = this.roomList
        let content = ''
        for (let i = 0; i < indexArr.length; i++) {
          content += '|'
          content += roomList[parseInt(indexArr[i])].id
        }
        this.formNode['content'] = content.substr(1)
        this.$apply()
      },
      // 获取预约时间
      bindMultiPickerChange(e) {
        this.multiIndex = e.detail.value
        const index = this.multiIndex
        const year = this.multiArray[0][index[0]]
        const month = this.multiArray[1][index[1]]
        const day = this.multiArray[2][index[2]]
        const hour = this.multiArray[3][index[3]]
        const minute = this.multiArray[4][index[4]]
        this.formNode['make_time'] = `${year}-${month}-${day} ${hour}:${minute}`
        this.$apply()
      },
    }

    events = {
      
    }

    onLoad() {
      const now = new Date();
      const year = now.getFullYear(); //得到年份
      const month = now.getMonth() + 1;//得到月份
      const day = now.getDate();//得到日期
      const hour = now.getHours();//得到小时
      const minute = now.getMinutes();//得到分
      this.formNode['make_time'] = `${year}-${month}-${day} ${hour}:${minute}`
      this.userInfo = this.$parent.globalData.userInfo
      this.$apply()
      this.getRoomList()
    }
    // 获取订单列表
    getRoomList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/hotel/hotel_room_list`,
        data: {
          hid: this.userInfo.id
        },
        method: 'GET',
        success: data => {
          data = this.$parent.null2str(data)
          if (data.data.code === 1) {
            this.roomList = data.data.data
            this.$apply()
          }
        }
      })
    }
    sub() {
      let formNode = this.formNode
      if (formNode.content == '') {
          wx.showToast({
            title: '请选择房间',
            icon: 'none'
          });
          return
      }
      if (formNode.make_time == '') {
          wx.showToast({
            title: '请选择时间',
            icon: 'none'
          });
          return
      }
      wx.showToast({
        title: "发布中...",
        icon: 'loading',
        duration: 10000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/order/create_order`,
        method: 'POST',
        header: {
          'content-type':'application/json',
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: formNode,
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            wx.showToast({
              title: "发布成功",
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                data: -1
              })
            }, 2000)
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }
  }
</script>
