<script>
  import wepy from 'wepy'
  export default class UserRelease extends wepy.page {
    config = {
      navigationBarTitleText: '发单列表'
    }
    components = {}

    mixins = []

    data = {
      requestImgUrl: '',
      // 房间列表
      roomList: [
        {id: '1', name: '1201'},
        {id: '1', name: '1201'},
        {id: '1', name: '1201'},
        {id: '1', name: '1201'}
      ]
    }

    computed = {}

    methods = {
    }

    events = {
      
    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      console.log(this.userInfo)
      this.$apply()
      this.getRoomList()
    }
    // 获取订单列表
    getRoomList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/order/get_user_room_list`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          page: 1
        },
        method: 'GET',
        success: data => {
          data = this.$parent.null2str(data)
          console.log(data)
          if (data.data.code === 8888) {
            this.roomList = data.data.data
            this.$apply()
            //        "last_page": 1,     表示总页数
            //         "per_page": 10,      表示每页条数
            //         "current_page": 1,   表示当前页
            //         "total": 1           表示总条数
          }
        }
      })
    }
  }
</script>
