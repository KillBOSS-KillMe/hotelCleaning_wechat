<script>
  import wepy from 'wepy'
  export default class OrderInfoHotel extends wepy.page {
    config = {
      navigationBarTitleText: '订单详情'
    }
    // components = {}

    mixins = []

    data = {
      requestImgUrl: '',
      orderInfo: {},
      lv: 5,
      level: 0,
      options: null
    }

    // computed = {}

    methods = {
      getLv(e) {
        this.level = e.currentTarget.dataset.level
        this.$apply()
      }
    }

    events = {
      
    }

    onLoad(options) {
      console.log(options)
      this.options = options
      this.userInfo = this.$parent.globalData.userInfo
      this.$apply()
      // 获取订单详情
      this.getOrderInfo()
    }
    // 获取订单详情
    getOrderInfo() {
      wx.showToast({
        title: "订单确认中...",
        icon: 'loading',
        duration: 1000000
      });
      // let url = ''
      // if (this.userInfo.type == 2) {
      //   // 执行酒店
      //   url = 'get_wine_order_details'
      // } else if (this.userInfo.type == 1) {
      //   // 执行保洁
      //   url = 'set_clean_order_details'
      // }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/basis/order_details`,
        data: {
          order_id: this.options.id,
          log: this.userInfo.log,
          lat: this.userInfo.lat
        },
        method: 'POST',
        success: data => {
          console.log(data)
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 1) {
            this.orderInfo = data.data.data
            // this.orderInfo.distance = this.orderInfo.distance.toFixed(2)
            this.orderInfo.perform_time = this.$parent.transformTime(parseInt(this.orderInfo.perform_time) * 1000)
            this.$apply()
          }
        }
      })
    }
    sub() {
      wx.showToast({
        title: "提交中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/hotel/confirm_order`,
        data: {
          hid: this.userInfo.id,
          order_id: this.options.id
        },
        method: 'POST',
        success: data => {
          wx.hideToast()
          console.log(data)
          data = this.$parent.null2str(data)
          if (data.data.code === 1) {
            wx.showToast({
              title: "确认成功",
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                data: -1
              })
            }, 2000)
          } else {
            wx.showToast({
              title: data.data.msg,
              icon: 'none'
            });
          }
        }
      })
    }
  }
</script>
