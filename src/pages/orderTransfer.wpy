<template>
  <view>
    <!-- <view class="search">
      <input type="text" @input="searchClean" placeholder="请输入转单人员姓名" />
      <icon class="iconfont iconsousuo"></icon>
    </view> -->
    <view class="cleaningList">
      <checkbox-group bindchange="selCleaning" data-index="{{index}}" data-checks="{{item.checks}}">
        <repeat for="{{cleaningList}}" item="item">
          <view class="item">
            <checkbox data-index="{{index}}" id="{{item.id}}" value="{{index}}" checked="{{item.checks}}"/>
            <text>{{item.name}}</text>
            <text>{{item.phone}}</text>
          </view>
        </repeat>
      </checkbox-group>
      <view class="listNull" wx:if="{{cleaningList.length == 0}}">未搜索到数据</view>
    </view>
    <view class="sub">
      <view @tap="sub">提交</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class OrderTransfer extends wepy.page {
    config = {
      navigationBarTitleText: '转单'
    }
    components = {
    }

    mixins = []

    data = {
      cleanId: '',
      cleaningList: []
    }

    // computed = {}
    methods = {
      // 底部导航跳转
      // goPage (url, evt) {
      //   // 销毁当前页{跳转}
      //   this.$redirect(url)
      // },
      // 获取选中保洁的ID
      selCleaning(e) {
        let cartIndex = e.detail.value
        this.cleanId = this.cleaningList[parseInt(cartIndex[0])].id
      },
      sub() {
        if (this.cleanId == '') {
          return false
        }
        wx.showToast({
          title: "拼命加载中...",
          icon: 'loading',
          duration: 1000000
        });
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/health/user_turn_order`,
          data: {
            zid: this.cleanId,
            order_id: this.options.id,
            uid: this.userInfo.id
          },
          method: 'PUT',
          success: data => {
            wx.hideToast()
            data = this.$parent.null2str(data)
            if (data.data.code === 1) {
              wx.showToast({
                title: "转单成功",
                icon: 'success',
                duration: 2000
              });
              setTimeout(() => {
                wx.navigateBack({
                  data: -1
                })
              }, 2000)
            } else {
              wx.showToast({
                title: data.data.msg,
                icon: 'none'
              });
            }
          }
        })
      },
      searchClean(e) {
        this.cleanSearch(e.detail.value)
      }
    }

    events = {
      
    }

    onLoad(options) {
      this.options = options
      this.userInfo = this.$parent.globalData.userInfo
    }
    // 搜索
    cleanSearch(name) {
      if (name == '') {
        return false
      }
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/order/set_clean_order_transfer_search`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          name: name
        },
        method: 'GET',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            this.cleaningList = data.data.data
            this.$apply()
          }
        }
      })
    }
    
  }
</script>
