    // computed = {}
    methods = {
      // 底部导航跳转
      // goPage (url, evt) {
      //   // 销毁当前页{跳转}
      //   this.$redirect(url)
      // }
    }

    events = {
      
    }

    onLoad(options) {
      this.options = options
      this.userInfo = this.$parent.globalData.userInfo
      // 执行列表加载
      this.getOrderList()
    }
    // 执行列表加载
    getOrderList() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      let url = ''
      if (this.userInfo.type == 2) {
        // 执行酒店加载
        url = 'get_wine_order_details'
      } else if (this.userInfo.type == 1) {
        // 执行保洁加载
        url = 'set_clean_order_details'
      }
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/order/${url}`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id: this.options.id
        },
        method: 'GET',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          console.log(data)
          if (data.data.code === 8888) {
            this.orderInfo = data.data.data
            this.$apply()
          }
        }
      })
    }
    sub() {
      wx.showToast({
        title: "拼命加载中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/order/set_clean_order_take`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id: this.options.id
        },
        method: 'GET',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          console.log(data)
          if (data.data.code === 8888) {
            wx.showToast({
              title: "接单成功",
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                data: -1
              })
            }, 2000)
          }
        }
      })
    }
  }
</script>
