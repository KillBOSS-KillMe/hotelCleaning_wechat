<template>
  <view>
    <view class="form">
      <view class="item">
        <label>姓名</label>
        <input type="text" data-name="name" @input="getSetData" placeholder="请输入姓名" />
      </view>
      <view class="item">
        <label>身份证</label>
        <input type="text" data-name="number" @input="getSetData" placeholder="请输入身份证号码" />
      </view>
    </view>
    <view class="title">请上传您的身份证正反面照片</view>
    <view class="img" @tap="getFrontage">
      <repeat for="{{frontageUrl}}" item="item">
        <image src="{{item.path.image_url}}" />
      </repeat>
      <image src="/img/card0.png" wx:if="{{frontageUrl.length == 0}}" />
    </view>
    <view class="img" @tap="getContrary">
      <repeat for="{{contraryUrl}}" item="item">
        <image src="{{item.path.image_url}}" />
      </repeat>
      <image src="/img/card1.png" wx:if="{{contraryUrl.length == 0}}" />
    </view>
    <view class="prompt">
      <icon class="iconfont iconrenzheng"></icon>
      信息已加密，仅用于身份认证
    </view>
    
    <view class="sub">
      <view @tap="sub">认证</view>
    </view>
  </view>
</template>

<script>
  import wepy from 'wepy'
  export default class UserCleaningCertification extends wepy.page {
    config = {
      navigationBarTitleText: '认证'
    }
    components = {}

    mixins = []

    data = {
      formNode: {
        name: '',
        number: '',
        frontage_image: '',
        contrary_image: ''
      },
      frontageUrl: [],
      contraryUrl: [],
    }

    computed = {}

    methods = {
      getSetData(e) {
        let formNode = this.formNode
        let name = e.currentTarget.dataset.name
        let value = e.detail.value
        formNode[name] = value
        this.formNode = formNode
        this.$apply()
      },
    }

    events = {
      
    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.$apply()
    }
    sub() {
      let formNode = this.formNode
      if (formNode.name == '') {
        wx.showToast({
          title: '请输入姓名',
          icon: 'none'
        });
        return
      }
      if (formNode.number == '') {
        wx.showToast({
          title: '请输入身份证号码',
          icon: 'none'
        });
        return
      }
      if (formNode.frontage_image == '' || formNode.contrary_image == '') {
        wx.showToast({
          title: '请上传身份证照片',
          icon: 'none'
        });
        return
      }
      this.upformData(formNode)
    }
    upformData(formNode) {
      wx.showToast({
        title: "信息提交中...",
        icon: 'loading',
        duration: 10000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/auth/clean_user_attestation`,
        method: 'POST',
        header: {
          'content-type':'application/json',
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: formNode,
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          if (data.data.code === 8888) {
            wx.showToast({
              title: "提交成功",
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                data: -1
              })
            }, 2000)
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }
    getFrontage() {
      this.frontageUrl = []
      wx.chooseImage({
        count: 1,
        sizeType: ['original', 'compressed'],
        sourceType: ['album', 'camera'],
        success: res => {
          wx.showToast({
            title: '图片上传中',
            icon: 'loading'
          });
          Promise.all(res.tempFiles.map(item => {
            return new Promise((resolve, reject) => {
              wx.uploadFile({
                url: `${this.$parent.globalData.requestUrl}/upload/upload_file`,
                filePath: item.path,
                name: 'file',
                header: {
                  authorization: this.$parent.globalData.token,
                  apikey: this.$parent.globalData.apikey
                },
                success: res => {
                  resolve({
                    path: JSON.parse(res.data).data
                  })
                }
              })
            })
          })).then(e => {
            wx.hideToast()
            this.frontageUrl = this.frontageUrl.concat(e)
            this.formNode['frontage_image'] = this.frontageUrl[0].path.image_id
            this.$apply()
          }).catch(err => console.log(err))
        }
      })
    }
    getContrary() {
      this.contraryUrl = []
      wx.chooseImage({
        count: 1,
        sizeType: ['original', 'compressed'],
        sourceType: ['album', 'camera'],
        success: res => {
          wx.showToast({
            title: '图片上传中',
            icon: 'loading'
          });
          Promise.all(res.tempFiles.map(item => {
            return new Promise((resolve, reject) => {
              wx.uploadFile({
                url: `${this.$parent.globalData.requestUrl}/upload/upload_file`,
                filePath: item.path,
                name: 'file',
                header: {
                  authorization: this.$parent.globalData.token,
                  apikey: this.$parent.globalData.apikey
                },
                success: res => {
                  resolve({
                    path: JSON.parse(res.data).data
                  })
                }
              })
            })
          })).then(e => {
            wx.hideToast()
            this.contraryUrl = this.contraryUrl.concat(e)
            this.formNode['contrary_image'] = this.contraryUrl[0].path.image_id
            this.$apply()
          }).catch(err => console.log(err))
        }
      })
    }

  }
</script>
