<script>
  import wepy from 'wepy'
  export default class OrderEvaluation extends wepy.page {
    config = {
      navigationBarTitleText: '评价订单'
    }
    // components = {}

    mixins = []

    data = {
      requestImgUrl: '',
      cleaningInfo: {img: '/img/daw.jpg', name: '二狗子', num: 10, id: '1'},
      lv: 5,
      level: 0
    }

    // computed = {}

    methods = {
      getLv(e) {
        this.level = e.currentTarget.dataset.level
        this.$apply()
      }
    }

    events = {
      
    }

    onLoad(options) {
      this.options = options
      this.userInfo = this.$parent.globalData.userInfo
    }
    sub() {
      if (this.level == 0) {
        wx.showToast({
          title: "请选择评分",
          icon: 'none',
          duration: 2000
        });
        return false
      }
      wx.showToast({
        title: "评价提交中...",
        icon: 'loading',
        duration: 1000000
      });
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/order/set_wine_order_evaluate`,
        header: {
          authorization: this.$parent.globalData.token,
          apikey: this.$parent.globalData.apikey
        },
        data: {
          id: this.options.id,
          level: this.level
        },
        method: 'PUT',
        success: data => {
          wx.hideToast()
          data = this.$parent.null2str(data)
          console.log(data)
          if (data.data.code === 8888) {
            wx.showToast({
              title: "评价成功",
              icon: 'success',
              duration: 2000
            });
            setTimeout(() => {
              wx.navigateBack({
                data: -1
              })
            }, 2000)
            
          }
        }
      })
    }
  }
</script>
